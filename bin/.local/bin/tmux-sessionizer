#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    DEVELOPER_DIR="$HOME/dev/projects"
    if [ ! -d "$DEVELOPER_DIR" ]; then
        exit 1
    fi

    DEVELOPER=()
    while IFS='' read -r line; do
        DEVELOPER+=("$line")
    done < <(find "$DEVELOPER_DIR" -mindepth 1 -maxdepth 1 -type d)

    SANDBOX_DIR="$HOME/dev/sandbox"
    if [ ! -d "$SANDBOX_DIR" ]; then
        exit 1
    fi

    SANDBOX=()
    while IFS='' read -r line; do
        SANDBOX+=("$line")
    done < <(find "$SANDBOX_DIR" -mindepth 1 -maxdepth 1 -type d)

    WORK_DIR="$HOME/dev/work"
    if [ ! -d "$WORK_DIR" ]; then
        exit 1
    fi

    PROJECTS=()
    while IFS='' read -r line; do
        PROJECTS+=("$line")
    done < <(find "$WORK_DIR" -mindepth 3 -maxdepth 3 -type d -iname "*.git")

    VAULTS_DIR="$HOME/vaults"
    if [ ! -d "$VAULTS_DIR" ]; then
        exit 1
    fi

    VAULTS=()
    while IFS='' read -r line; do
        VAULTS+=("$line")
    done < <(find "$VAULTS_DIR" -mindepth 1 -maxdepth 1 -type d)

    FOLDERS=("${DEVELOPER[@]}" "${PROJECTS[@]}" "${SANDBOX[@]}" "${VAULTS[@]}")
    selected=$(printf "%s\n" "${FOLDERS[@]}" | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2>/dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux attach-session -t "$selected_name"
tmux switch-client -t "$selected_name"
