# Remap leader
unbind-key C-b
set -g prefix C-a
bind-key -n C-a send-prefix

# Colorscheme fix
set -g default-terminal "xterm-256color"
set -ag terminal-overrides ",$TERM:RGB"

# Set bar position
set -g status-position top

# Scrolling
setw -g mouse on

# Start windows and panes at 1
set -g base-index 1
setw -g pane-base-index 1

# Increase history size
set -g history-limit 100000

# Increase window name lenght
set -g status-left-length 25

# Testing with keyboard shotcuts
bind -r '%' split-window -c '#{pane_current_path}' -h
bind -r '"' split-window -c '#{pane_current_path}'
bind -r k select-pane -U
bind -r j select-pane -D
bind -r h select-pane -L
bind -r l select-pane -R
bind -r g new-window -n '' lazygit
bind -r b new-window -n '' lazydocker
bind -r c new-window -c '#{pane_current_path}'
bind -r Tab last-window

# ThePrimeagen sessionizer script
bind-key -r f run-shell "tmux neww tmux-sessionizer"

# Reload Tmux configuration
bind -r r source-file ~/.config/tmux/tmux.conf

# Plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin "nordtheme/tmux"

run "~/.config/tmux/plugins/tpm/tpm"
